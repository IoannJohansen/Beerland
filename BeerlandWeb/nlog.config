<?xml version="1.0" encoding="utf-8"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true">

    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <targets>
        <target xsi:type="File" name="dbLogsTarget" fileName="C:\Users\Ivan Sachishin\Desktop\Dev\Beerland\logs\db\db-logs-${shortdate}.log" layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />
        <target xsi:type="File" name="errorLogsTarget" fileName="C:\Users\Ivan Sachishin\Desktop\Dev\Beerland\logs\errors\error-logs-${shortdate}.log" layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />
        <target xsi:type="ColoredConsole" name="consoleLogs" />
    </targets>

    <rules>
        <logger name="Microsoft.EntityFrameworkCore.Database.Command" minlevel="Info" writeTo="dbLogsTarget" />
        <logger name="*" minlevel="Error" writeTo="errorLogsTarget" />
        <logger name="*" minlevel="Debug" writeTo="consoleLogs" />
    </rules>
</nlog>